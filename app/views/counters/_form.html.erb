<%= form_with(model: counter, local: true) do |form| %>
  <% if counter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(counter.errors.count, "error") %> prohibited this counter from being saved:</h2>

      <ul>
        <% counter.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :water_type %>
    <%= form.select :water_type, Counter.water_types.keys %>
  </div>

  <div class="field">
    <%= form.label :value %>
    <%= form.number_field :value %>
  </div>

  <div class="field">
    <%= form.label :flat_id %>
    <!--<%= form.text_field :flat_id %>-->
    <!--<%= collection_select(:flat, :flat_id, Flat.all, :id, :address) %>-->
    <!--<%= options_from_collection_for_select(Flat.all, :id, :address) %>-->
